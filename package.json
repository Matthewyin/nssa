{
  "name": "nssa-hugo-site",
  "version": "2.0.0",
  "description": "NSSA - Hugo-powered historical research and analysis platform",
  "main": "index.js",
  "scripts": {
    "css:build": "npx tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --watch=false",
    "css:watch": "npx tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --watch",
    "dev": "npm run css:build && hugo server --buildDrafts --bind 0.0.0.0",
    "build": "npm run css:build && npx hugo --minify --gc",
    "preview": "npm run css:build && npx hugo server --environment production",
    "clean": "rm -rf public resources",
    "deploy": "node scripts/deploy-cloudflare.js",
    "deploy:staging": "node scripts/deploy-cloudflare.js --staging",
    "deploy:dry-run": "node scripts/deploy-cloudflare.js --dry-run",
    "deploy:integrated": "node scripts/deploy-integrated.js",
    "deploy:integrated:staging": "node scripts/deploy-integrated.js staging",
    "deploy:integrated:skip-build": "node scripts/deploy-integrated.js --skip-build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "publish": "node scripts/local-publish.js",
    "publish:website": "node scripts/local-publish.js --website-only",
    "publish:wechat": "node scripts/local-publish.js --wechat-only",
    "publish:all": "node scripts/local-publish.js --all",
    "parse": "node scripts/parse-articles.js",
    "setup": "npm install && cp .env.example .env"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matthewyin/nssa.git"
  },
  "keywords": [
    "hugo",
    "static-site",
    "history",
    "research",
    "education",
    "cloudflare-workers",
    "edge-computing"
  ],
  "author": "NSSA Team",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "bugs": {
    "url": "https://github.com/Matthewyin/nssa/issues"
  },
  "homepage": "https://github.com/Matthewyin/nssa#readme",
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.4",
    "hugo-bin": "^0.145.2"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@tailwindcss/typography": "^0.5.16",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.6.1",
    "form-data": "^4.0.0",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.0.0",
    "tailwindcss": "^3.4.17",
    "wrangler": "^4.33.1"
  }
}
