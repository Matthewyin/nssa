---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all English articles
const allPosts = await getCollection('posts', ({ data }) => {
  return data.lang === 'en' && !data.draft;
});

// Sort by date
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Get latest posts
const latestPosts = sortedPosts.slice(0, 6);

// Group by category
const categories = {
  business: sortedPosts.filter(post => post.data.categories?.includes('business')).slice(0, 3),
  tech: sortedPosts.filter(post => post.data.categories?.includes('tech')).slice(0, 3),
  psychology: sortedPosts.filter(post => post.data.categories?.includes('psychology')).slice(0, 3),
  workplace: sortedPosts.filter(post => post.data.categories?.includes('workplace')).slice(0, 3),
  history: sortedPosts.filter(post => post.data.categories?.includes('history')).slice(0, 3),
};
