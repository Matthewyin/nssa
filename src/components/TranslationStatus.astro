---
import { t } from '../utils/i18n';

export interface Props {
  post: any;
  currentLang: string;
}

const { post, currentLang } = Astro.props;

// 获取翻译状态
const translationStatus = post.data.translationStatus || 'original';
const originalLang = post.data.originalLang;
const translatedFrom = post.data.translatedFrom;

// 状态颜色映射
const statusColors = {
  original: 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
  translated: 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200',
  needs_update: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
};

// 状态图标映射
const statusIcons = {
  original: `<svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
  </svg>`,
  translated: `<svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" clip-rule="evenodd"/>
  </svg>`,
  needs_update: `<svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
  </svg>`
};

const shouldShowStatus = translationStatus !== 'original' || originalLang;
---

{shouldShowStatus && (
  <div class="inline-flex items-center gap-2 px-2 py-1 rounded-full text-xs font-medium mb-4 {statusColors[translationStatus]}">
    <span set:html={statusIcons[translationStatus]} />
    <span>{t(`article.translation_status.${translationStatus}`, currentLang)}</span>
    
    {translationStatus === 'translated' && originalLang && originalLang !== currentLang && (
      <span class="text-xs opacity-75">
        • {t('article.translated_from', currentLang)} {originalLang === 'zh' ? '中文' : 'English'}
      </span>
    )}
  </div>
)}

<style>
  /* 确保图标正确显示 */
  svg {
    flex-shrink: 0;
  }
</style>
